<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.astratech.nim027.si_prodi_mi_android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SIProdiMIApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher3_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SI_Prodi_MI_Android"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name=".DetailInformasiActivity"
            android:theme="@style/Theme.SI_Prodi_MI_Android_NAB"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <activity
            android:name=".PengaturanActivity"
            android:theme="@style/Theme.SI_Prodi_MI_Android_NAB"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <activity
            android:name=".KalenderAcaraActivity"
            android:theme="@style/Theme.SI_Prodi_MI_Android_NAB"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <activity
            android:name=".InformasiActivity"
            android:theme="@style/Theme.SI_Prodi_MI_Android_NAB"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <activity
            android:name=".AbsensiMukaActivity"
            android:theme="@style/Theme.SI_Prodi_MI_Android_NAB"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <activity
            android:name=".DashboardActivity"
            android:theme="@style/Theme.SI_Prodi_MI_Android_NAB"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SI_Prodi_MI_Android_NAB">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity_home"
            android:theme="@style/Theme.SI_Prodi_MI_Android_NAB"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <activity
            android:name=".activity_register"
            android:theme="@style/Theme.SI_Prodi_MI_Android_NAB"
            android:configChanges="orientation|screenSize|keyboardHidden" />
    </application>
</manifest>